<div class="side-bar middle">

  <div class="pd" style = "background-color: white">
  <div class="center">
    <img src="https://purchase-app-backet.s3.amazonaws.com/uploads/user-default.png" class="img-thumbnail" style="width: 70%; border-radius: 1000px" alt="Something">
    <%= link_to about_path do %><h3><%= current_user.name if current_user %></h3><% end %>
  </div>
  <div class="icon-links center">

  </div>
  <div class="">
    <ul class = "navbar-nav">
      <li class="pd side-bar-item"><%= link_to "カテゴリー", categories_path %></li>
      <li class="pd margin-vertical side-bar-item">
        <%= link_to "人気記事", articles_path%>
      </li>
      <li class="pd side-bar-item"><%= link_to "最新記事", latest_article_path %></li>
      <li class="pd side-bar-item margin-vertical" id = "slide_btn"><span class = "slide-toggle">投稿日別 ∇</span></li>
      <ul class = "hide"><% articles_group_by_date %>
        <% @counts.each do |key, value| %>
        <li class = "pd side-bar-item">
          <span class = "pd-10"><%= link_to group_index_path(:date => key) do %><%= key %><% end %>
          </span>
          <span class = "pd-10"><%= value %> 記事</span>
        </li>
        <% end %>
      </ul>
    </ul>
    </div>

    </div>

    <div class="side-bar" style = "background-color: white; margin-top: 10px">
      <%= form_tag search_path, method: :get do%>
      <div class="row center">
      <div class="col-8">
        <%= text_field_tag :content,"",:class => "form-control", :style => "height: 40px", :placeholder => "検索ワード" %>
      </div>
      <div class="col-4">
        <%= submit_tag "検索", class: "btn btn-success"%>
      </div>
      </div>
      <% end %>
    </div>
</div>
