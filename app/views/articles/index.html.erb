<% if current_user %>
  <div class="margin-vertical">
    <h3>管理者でログイン中</h3>
    <%= render "shared/admin_menu" %>
    <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-success" %>
  </div>
<% end %>
<h1>記事一覧</h1>

<div class = "row">
<%= render @articles %>
</div>

<div class="">
  <h2>人気記事</h2>
  <% @parrarel_articles.each do |pa| %>
    <%= render "parrarel_article", article: pa%>
  <% end %>
</div>
<%= paginate @articles %>
