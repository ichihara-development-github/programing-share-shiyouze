<div class="col-6 col-md-6 margin-vertical">
  <div class="card center">
    <%= image_tag "categories/#{category.image}",style: "height: 250px" %>
    <div class = "container">
      <%= link_to category_path(category) do%>
        <h4><%= category.name %></h4>
        <h5><%= category.articles.count %>記事</h5>
      <% end %>
    </div>
  </div>
</div>
