<%= form_for obj, :html => {multipart: true} do |f| %>

  <div class="form-group">
    <div class = "col-md-10">
      <%= f.file_field :image %>
      <%= f.label "名前" %>
      <span style = "color:red">*</span>
      <%= f.text_field :name, required: true, class: "form-control",maxlength: 32  %>
    </div>
    <div class = "col-md-10"><%= f.label "説明"%>
      <%= f.text_area :description, required: true, class: "form-control"%>
    </div>
  </div>

   <div class = "form-group center">
    <%= f.submit "保存", class: "btn btn-primary" %>
   </div>

<% end %>
