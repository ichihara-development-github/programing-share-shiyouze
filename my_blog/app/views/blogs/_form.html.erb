<%= form_for obj do |f| %>

  <div class="form-group">
    <div class = "col-md-10">
      <%= f.label "タイトル" %>
      <span style = "color:red">*</span>
      <%= f.text_field :title, required: true, class: "form-control",maxlength: 32  %>
    </div>
    <div class = "col-md-10"><%= f.label "本文"%>
      <%= f.text_area :content, required: true, class: "form-control"%>
    </div>
  </div>

    <div class = "col-md-6">
      <label >カテゴリー</label>
      <%= f.select(:category_ids, @categories.name, class: "form-control", include_blank: "未選択") %><br>
    </div>
   <div class = "form-group center">
    <%= f.submit "保存", class: "btn btn-primary" %>
   </div>

<% end %>
