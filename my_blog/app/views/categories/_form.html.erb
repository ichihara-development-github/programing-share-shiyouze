<%= form_for obj do |f| %>

  <div class="form-group">
    <div class = "col-md-10">
      <%= f.label "名前" %>
      <span style = "color:red">*</span>
      <%= f.text_field :name, required: true, class: "form-control",maxlength: 10  %>
    </div>
  </div>
   <div class = "form-group center">
    <%= f.submit "保存", class: "btn btn-primary" %>
   </div>

<% end %>
